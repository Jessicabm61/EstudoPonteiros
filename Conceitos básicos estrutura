
#include <stdio.h>

int main()
{
    
    struct horario
    {
        int horas;
        int minutos;
        int segundos;
    };
    
    struct horario agora; //declarando uma estrutura do tipo hor치rio chamada agora
    
    agora.horas=15; //nome da estrutura.vari치vel dentro da estrutura altera os valores das vari치veis da estrutura
    agora.minutos=17;
    agora.segundos=30;
    
    printf ("%i:%i:%i", agora.horas, agora.minutos, agora.segundos); //imprimindo vari치veis da estrutra

    return 0;
}
