//Ponteiros para funções

#include <stdio.h>

void f1 (int a);
void f2 (int b);
void f3 (int c);

int main()
{
    void(*f[3])(int) = {f1, f2, f3}; //Inicializando array de ponteiros para funções

    int escolha;
    printf ("Digite um numero entre 0 e 2, para sair 3: \n");
    scanf ("%d", &escolha);
    
    while (escolha >= 0 && escolha < 3){
        (*f[escolha])(escolha); //chama a função
        
    printf ("Digite um numero entre 0 e 2, para sair 3: \n");
    scanf ("%d", &escolha);   
        
    }
    return 0;
}

void f1 (int a){
    printf ("Escolha %d que chama a função f1\n", a);
}

void f2 (int b){
    printf ("Escolha %d que chama a função f2\n", b);
}

void f3 (int c){
    printf ("Escolha %d que chama a função f3\n", c);
}
